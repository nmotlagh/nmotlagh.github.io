---
import BaseLayout from '../../layouts/BaseLayout.astro';

const target = `${import.meta.env.BASE_URL}#experience`;
---

<BaseLayout title="Experience" description="Redirecting to the Experience section.">
  <Fragment slot="head">
    <meta http-equiv="refresh" content={`0;url=${target}`} />
  </Fragment>
  <section class="site-shell section">
    <div class="stack">
      <h1 class="hero__heading" style="font-size: clamp(2rem, 1.8rem + 1vw, 2.6rem);">
        Redirecting to Experience
      </h1>
      <p class="prose" style="max-width: 52ch;">
        Experience now lives on the homepage timeline. Click below if your browser doesnâ€™t redirect automatically.
      </p>
      <div class="hero__actions">
        <a class="button" href={target}>Go to Experience</a>
      </div>
    </div>
  </section>
  <script is:inline>
    window.requestAnimationFrame(() => window.location.replace(target));
  </script>
</BaseLayout>

