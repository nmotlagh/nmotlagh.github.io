---
import type { ImageMetadata } from 'astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/theme.css';

const siteName = 'Nick Kashani Motlagh';
const defaultDescription =
  'Ph.D. candidate at The Ohio State University researching uncertainty-aware vision-language systems.';

interface LayoutProps {
  title?: string;
  description?: string;
  ogImage?: string | ImageMetadata;
  structuredData?: Record<string, unknown> | Record<string, unknown>[];
}

const { title, description = defaultDescription, ogImage, structuredData }: LayoutProps = Astro.props;

const pageTitle = title ? `${title} · ${siteName}` : siteName;
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).href : undefined;
const resumeHref = `${import.meta.env.BASE_URL}resume.pdf`;
const scholarHref = 'https://scholar.google.com/citations?user=srZXFMcAAAAJ&hl=en';
const githubHref = 'https://github.com/nmotlagh';
const linkedInHref = 'https://www.linkedin.com/in/nicholas-kashani-motlagh';
const emailHref = 'mailto:kashanimotlagh.1@osu.edu';
const faviconHref = `${import.meta.env.BASE_URL}favicon.svg`;
const rssHref = `${import.meta.env.BASE_URL}rss.xml`;
const structured = Array.isArray(structuredData)
  ? structuredData.filter(Boolean)
  : structuredData
    ? [structuredData]
    : [];
const ogImageUrl =
  typeof ogImage === 'string'
    ? ogImage
    : ogImage
      ? Astro.site
        ? new URL(ogImage.src, Astro.site).href
        : ogImage.src
      : undefined;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#f3f5f7" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#0b1220" media="(prefers-color-scheme: dark)" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}
    <meta name="twitter:site" content="@NickMotlagh" />
    <meta name="twitter:creator" content="@NickMotlagh" />
    <link rel="alternate" type="application/rss+xml" title="News · Nick Kashani Motlagh" href={rssHref} />
    <script defer data-domain="nmotlagh.github.io" src="https://plausible.io/js/script.js"></script>
    <script is:inline>
      (function () {
        const storageKey = 'theme-preference';
        const doc = document.documentElement;
        const media = window.matchMedia('(prefers-color-scheme: dark)');

        const getStored = () => {
          try {
            return localStorage.getItem(storageKey);
          } catch (_) {
            return null;
          }
        };

        const setStored = (value) => {
          try {
            localStorage.setItem(storageKey, value);
          } catch (_) {
            // Ignore storage failures (e.g., private browsing).
          }
        };

        const applyTheme = (value) => {
          const theme = value === 'dark' ? 'dark' : 'light';
          doc.dataset.theme = theme;
        };

        const init = () => {
          const stored = getStored();
          if (stored) {
            applyTheme(stored);
          } else {
            applyTheme(media.matches ? 'dark' : 'light');
          }
        };

        init();

        media.addEventListener('change', (event) => {
          if (!getStored()) {
            applyTheme(event.matches ? 'dark' : 'light');
          }
        });

        window.__setTheme = (preference) => {
          setStored(preference);
          applyTheme(preference);
          return preference;
        };

        window.__clearThemePreference = () => {
          try {
            localStorage.removeItem(storageKey);
          } catch (_) {
            //
          }
          applyTheme(media.matches ? 'dark' : 'light');
        };
      })();
    </script>
    {structured.map((entry) => (
      <script type="application/ld+json" is:inline>{JSON.stringify(entry)}</script>
    ))}
    <slot name="head" />
  </head>
  <body>
    <a class="skip-link" href="#page-content">Skip to content</a>
    <header class="site-header">
      <div class="site-shell site-header__inner">
        <a class="site-brand" href={import.meta.env.BASE_URL}>{siteName}</a>
        <nav class="site-nav" aria-label="Primary navigation">
          <a data-astro-prefetch href={`${import.meta.env.BASE_URL}#about`}>About</a>
          <a data-astro-prefetch href={`${import.meta.env.BASE_URL}#experience`}>Experience</a>
          <a data-astro-prefetch href={`${import.meta.env.BASE_URL}#skills`}>Skills</a>
          <a data-astro-prefetch href={`${import.meta.env.BASE_URL}#publications`}>Publications</a>
          <a data-astro-prefetch href={`${import.meta.env.BASE_URL}#artifacts`}>Artifacts</a>
          <a data-astro-prefetch href={`${import.meta.env.BASE_URL}news/`}>News</a>
          <a
            class="site-nav__cta"
            href={resumeHref}
            target="_blank"
            rel="noopener noreferrer"
            data-analytics-event="nav_resume_click"
          >
            Resume
          </a>
        </nav>
        <ThemeToggle />
      </div>
    </header>
    <main id="page-content" class="site-main">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="site-shell site-footer__inner">
        <div class="site-footer__contact">
          <span>Email: <a href={emailHref}>kashanimotlagh.1@osu.edu</a></span>
          <span aria-hidden="true">·</span>
          <a href={githubHref} target="_blank" rel="noopener noreferrer">GitHub</a>
          <span aria-hidden="true">·</span>
          <a href={scholarHref} target="_blank" rel="noopener noreferrer">Scholar</a>
          <span aria-hidden="true">·</span>
          <a href={linkedInHref} target="_blank" rel="noopener noreferrer">LinkedIn</a>
          <span aria-hidden="true">·</span>
          <span>U.S. citizen</span>
        </div>
        <div>© {new Date().getFullYear()} {siteName}</div>
        <div>
          Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a>. Deployed on
          GitHub Pages.
        </div>
      </div>
    </footer>
    <script is:inline>
      window.addEventListener('DOMContentLoaded', () => {
        if (typeof window.plausible !== 'function') return;
        document.querySelectorAll('[data-analytics-event]').forEach((element) => {
          element.addEventListener('click', () => {
            window.plausible(element.getAttribute('data-analytics-event'));
          });
        });
      });
    </script>
  </body>
</html>
